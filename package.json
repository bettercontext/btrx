{
  "name": "btrx",
  "version": "0.0.0",
  "description": "Structured code context for smarter LLMs",
  "author": "Eddy Bordi",
  "license": "Apache-2.0",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "btrx": "bin/btrx.js"
  },
  "scripts": {
    "build:app": "vue-tsc --build src/app/tsconfig.json && vite build",
    "build": "NODE_ENV=production npm run build:app && NODE_ENV=production tsc",
    "dev:tauri": "npx tauri dev",
    "build:tauri": "npx tauri build",
    "dev:server": "NODE_ENV=development tsx -r tsconfig-paths/register src/server.ts",
    "dev:app": "vite",
    "dev:wait-and-app": "wait-on tcp:3001 && npm run dev:tauri",
    "dev:server-and-app": "run-p dev:server \"dev:wait-and-app\"",
    "dev": "run-s db:migrate dev:server-and-app",
    "db:migrate": "drizzle-kit push --config=drizzle.config.ts",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "start": "run-s db:migrate start:server",
    "start:server": "NODE_ENV=production node --loader tsconfig-paths/esm-loader dist/server.js",
    "test": "vitest run",
    "check:lint": "eslint .",
    "check:format": "prettier --check .",
    "check:deps": "npx depcheck",
    "check:types": "tsc --noEmit",
    "check:all": "npm run check:deps && npm run check:lint && npm run check:format && npm run check:types",
    "fix:lint": "eslint --fix .",
    "fix:format": "prettier --write .",
    "docs:build": "vuepress build docs",
    "docs:clean-dev": "vuepress dev docs --clean-cache",
    "docs:dev": "vuepress dev docs",
    "docs:update-package": "npx vp-update"
  },
  "keywords": [
    "mcp",
    "sse",
    "tasks"
  ],
  "dependencies": {
    "@electric-sql/pglite": "^0.3.0",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@primeuix/themes": "^1.0.3",
    "conf": "^13.1.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.43.1",
    "express": "^5.1.0",
    "jiti": "^2.4.2",
    "overlayscrollbars": "^2.0.0",
    "overlayscrollbars-vue": "^0.5.9",
    "primeicons": "^7.0.0",
    "primevue": "^4.3.3",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "yaml": "^2.7.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.5.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/tsconfig": "^0.7.0",
    "@vuepress/bundler-vite": "^2.0.0-rc.23",
    "@vuepress/theme-default": "^2.0.0-rc.89",
    "drizzle-kit": "^0.31.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-vue": "^10.1.0",
    "mermaid": "^11.6.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "sass-embedded": "^1.87.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "~5.8.3",
    "vite": "^6.2.4",
    "vitest": "^3.1.2",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^2.2.8",
    "vuepress": "^2.0.0-rc.23",
    "vuepress-plugin-md-enhance": "^2.0.0-rc.89",
    "wait-on": "^8.0.3"
  }
}
