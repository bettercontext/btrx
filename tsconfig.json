{
  "compilerOptions": {
    "target": "ES2020",
    "module": "preserve",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    // "rootDir": "src", // Removed to allow root-level files in include
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "scripts/**/*.ts",
    "*.config.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "drizzle.config.ts",
    ".eslintrc.cjs",
    "bin/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
